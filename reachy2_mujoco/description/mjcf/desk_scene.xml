<mujoco model="reachy2_manipulation_scene">
    <compiler meshdir="assets/meshes" texturedir="assets/textures" />

    <include file="reachy2.xml"/>
    <include file="assets/fruits_assets.xml"/>
    <include file="assets/bowl_asset.xml"/>
    <include file="assets/plate_asset.xml"/>
    <include file="assets/table_asset.xml"/>

    <default>
        <default class="ycb_col">
            <geom contype="1" conaffinity="1" group="3" rgba=".4 .5 .6 1"/>
        </default>
        <default class="ycb_viz">
            <geom contype="0" conaffinity="0" type="mesh" mass="0"/>
        </default>

    </default>

    <option gravity="0 0 -9.81" timestep="0.0005" iterations="50" integrator="RK4">
        <flag multiccd="enable"/>
    </option>

    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
        <rgba haze="0.15 0.25 0.35 1"/>
        <global azimuth="160" elevation="-20" offwidth="1280" offheight="720"/>
    </visual>

    <asset>
        <!-- Ground -->
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
        <texture type="2d" name="groundplane" builtin="checker" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    </asset>

    <worldbody>

        <light pos="0 0 3" dir="0 0 -1" directional="false"/>

        <!-- Sol -->
        <body name="floor">
            <geom name="floor" type="plane" pos="0 0 0" size="0 0 .25" material="groundplane"/>
        </body>

        <!-- Table -->
        <body name="table" pos="0.7 0 0" euler="1.57 1.57 0">
            <geom name="table_visual" type="mesh" mesh="wooden_table" material="wooden_table_material"/>
            <geom name="table_collision" type="box" size="0.45 0.64 0.28" contype="1" conaffinity="1" rgba="0 0 0 0"/>
        </body>

        <!-- Apples -->
        <body name="apple1" pos="0.5 -0.1 0.64" >
            <geom class="ycb_viz" material="apple_mat" mesh="apple"/>
            <geom class="ycb_col" mesh="apple_collision" conaffinity="1" condim="4" friction="0.1 0.1 0.1" mass="0.068" rgba="1 1 1 1" solimp="0.99 0.99 0.01" solref=".001 0.1" type="mesh" group="3"/>
        </body>

       <body name="apple2" pos="0.47 0 0.64" >
            <geom class="ycb_viz" material="apple_mat" mesh="apple"/>
            <geom class="ycb_col" mesh="apple_collision" conaffinity="1" condim="4" friction="0.1 0.1 0.1" mass="0.068" rgba="1 1 1 1" solimp="0.99 0.99 0.01" solref=".001 0.1" type="mesh" group="3"/>
        </body>

        <!-- Oranges -->
        <body name="orange1" pos="0.52 0.1 0.64">
            <geom class="ycb_viz" material="orange_mat" mesh="orange"/>
            <geom class="ycb_col" mesh="orange_collision_0" conaffinity="1" condim="4" friction="0.1 0.1 0.1" mass="0.047" rgba="1 1 1 1" solimp="0.99 0.99 0.01" solref=".001 0.1" type="mesh" group="3"/>
        </body>

        <body name="orange2" pos="0.61 0.05 0.64">
            <geom class="ycb_viz" material="orange_mat" mesh="orange"/>
            <geom class="ycb_col" mesh="orange_collision_0" conaffinity="1" condim="4" friction="0.1 0.1 0.1" mass="0.047" rgba="1 1 1 1" solimp="0.99 0.99 0.01" solref=".001 0.1" type="mesh" group="3"/>
        </body>

        <!-- Plate -->
        <body pos="0.58 0.27 0.64" euler="0 0 0">
			<freejoint name="plate"/>
			<include file="objects/plate_body.xml" />
		</body>

        <!-- Bowl -->
        <body pos="0.62 -0.2 0.64" euler="0 0 1.57">
			<freejoint name="bowl"/>
			<include file="objects/bowl_body.xml" />
		</body>
    </worldbody>

</mujoco>
