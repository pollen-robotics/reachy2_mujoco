<mujoco model="desk_scene">
    <include file="reachy2.xml" />
    <compiler meshdir="./obj_meshes" texturedir="./obj_meshes" />
    
    <default>
        <geom friction="0.1 0.005 0.0001"/>
    </default>

    <option gravity="0 0 -9.81" impratio="5">
        <flag multiccd="enable"/>
    </option>
    
    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0" />
        <rgba haze="0.15 0.25 0.35 1" />
        <global azimuth="160" elevation="-20" offwidth="1280" offheight="720"/>
    </visual>
    
    <asset>
        <!-- Ground -->
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072" />
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300" />
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2" />

        <!-- Apple -->
        <texture type="2d" name="food_apple_01_diff" file="food_apple_01_1k.blend/textures/food_apple_01_diff_1k.png" />
        <material name="food_apple_01_material" texture="food_apple_01_diff" rgba="1 1 1 1" shininess="0.2" specular="0.1" reflectance="0.05" />
        <mesh name="food_apple_01_mesh" file="food_apple_01_1k.blend/food_apple_01_1k.obj" />

        <!-- Table -->
        <texture type="2d" name="wooden_table_02_diff" file="wooden_table_02_1k.blend/textures/wooden_table_02_diff_1k.png" />
        <material name="wooden_table_02_material" texture="wooden_table_02_diff" rgba="1 1 1 1" shininess="0.2" specular="0.1" reflectance="0.05" />
        <mesh name="wooden_table" file="wooden_table_02_1k.blend/wooden_table_02_1k.obj" scale = "0.8 0.8 0.8" />
    </asset>
    
    <worldbody>
        <light pos="0 0 3" dir="0 0 -1" directional="false" />

        <!-- Ground -->
        <body name="floor">
            <geom name="floor" type="plane" pos="0 0 0" size="0 0 .25" material="groundplane" />
        </body>

        <!-- Table -->
        <body name="table" pos="0.7 0 0" euler="1.57 1.57 0">
            <geom name="table_geom_visual" class="visual" type="mesh" mesh="wooden_table" material="wooden_table_02_material" />
            <geom name="table_geom_collision" type="box" size="0.45 0.64 0.28" contype="1" conaffinity="1"  rgba="0 0 0 0" />
        </body>

        <!-- Apple -->
        <body name="apple" pos="0.8 -0.2 0.9">
            <geom name="apple_geom" type="mesh" mesh="food_apple_01_mesh" material="food_apple_01_material" mass="0.5" />
            <joint name="apple_joint" type="free" />
        </body>
    </worldbody>
</mujoco>
